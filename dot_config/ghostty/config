font-family = "Berkeley Mono"
font-thicken = true
keybind = global:cmd+grave_accent=toggle_quick_terminal
theme = Solarized Osaka Night

macos-titlebar-style = transparent
window-save-state = always
shell-integration-features = no-cursor
cursor-style = block

# Splits
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down
keybind = cmd+ctrl+left=goto_split:left
keybind = cmd+ctrl+right=goto_split:right
keybind = cmd+ctrl+up=goto_split:top
keybind = cmd+ctrl+down=goto_split:bottom
keybind = cmd+ctrl+e=equalize_splits
keybind = cmd+ctrl+f=toggle_split_zoom

# Font size
keybind = cmd+plus=increase_font_size:1
keybind = cmd+minus=decrease_font_size:1
keybind = cmd+zero=reset_font_size
